<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.todolist.presentation.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_todolistFragment"
            app:destination="@id/todolistFragment" />
        <action
            android:id="@+id/action_mainFragment_to_qrScannerFragment"
            app:destination="@id/qrScannerFragment" />
    </fragment>

    <fragment
        android:id="@+id/todolistFragment"
        android:name="com.example.todolist.presentation.todolist.TodolistFragment"
        android:label="TodolistFragment" />
    <fragment
        android:id="@+id/qrScannerFragment"
        android:name="com.example.todolist.presentation.qrcode.QrScannerFragment"
        android:label="QrScannerFragment"
        tools:layout="@layout/fragment_qr_scanner" />


</navigation>
